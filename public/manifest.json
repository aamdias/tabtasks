{
    "manifest_version":3,
    "version":"1.0.0",
    "name":"Tab Tasks",
    "action":{
        "default_popup":"index.html"
    },
    "permissions":[
        "scripting",
        "activeTab",
        "storage"
    ],
    "host_permissions":[
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "checklist-icon.png",
        "32": "checklist-icon.png",
        "48": "checklist-icon.png",
        "128": "checklist-icon.png"
    },
    "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+Period",
            "mac": "MacCtrl+Period"
          },
          "description": "Open the extension popup"
        }
      }
}