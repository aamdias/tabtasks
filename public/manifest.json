{
    "manifest_version":3,
    "version":"1.2.0",
    "description":"Organize your tasks in a simple way within each browser tab",
    "name":"Tab Tasks",
    "action":{
        "default_popup":"index.html"
    },
    "permissions":[
        "activeTab",
        "storage"
    ],
    "host_permissions":[
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "16": "checklist-icon.png",
        "32": "checklist-icon.png",
        "48": "checklist-icon.png",
        "128": "checklist-icon.png"
    },
    "commands": {
        "_execute_action": {
          "suggested_key": {
            "default": "Ctrl+Shift+O",
            "mac": "MacCtrl+Shift+O"
          },
          "description": "Open the extension popup"
        }
      }
}